<!DOCTYPE HTML>
<html>
<head>
    <link href="/web2/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="/web2/css/style.css" rel='stylesheet' type='text/css' />
    <!----webfonts---->
    <link href='http://fonts.googleapis.com/css?family=Oswald:100,400,300,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900,300italic' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                @foreach (var x in Model.blogs)
                {
                    <div class="single-grid">

                        <img src="@x.BlogIMG" alt="" style="margin-bottom:20px" />
                        <h3 style="color:#3b3b3b ">@x.Title</h3>
                        <p>
                            @x.Description
                        </p>
                    </div>
                }
                @foreach (var x in Model.comments)
                {
                    <ul class="comment-list">
                        <li>
                            <img src="/web2/images/avatar.png" class="img-responsive" alt="">
                            <div class="desc">
                                <h4 style="color:#3b3b3b">@x.Username</h4> <p> @x.CommentText</p>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    </ul>
                }
                <div class="content-form">
                    <h3>Leave a comment</h3>
                    <form method="post">
                        <input type="hidden" name="BlogID" value="@ViewBag.ID" />
                        <input type="text" placeholder="Username" name="Username" required />
                        <input type="text" placeholder="Email" required name="Mail" />
                        <textarea placeholder="Comment" name="CommentText"></textarea>
                        <input type="submit" value="SEND" />
                    </form>

                </div>
            </div>
            <div class="col-md-4 side-content">
                <div class="recent">
                    <h3>RECENT POSTS</h3>
                    <ul>
                        @foreach (var x in Model.recentblogs)
                        {
                            <li><a href="/Blog/Details/@x.ID">@x.Title</a></li>
                        }
                    </ul>
                </div>
                <div class="comments">
                    <h3>RECENT COMMENTS</h3>
                    <ul>
                        @foreach (var x in Model.recentcomments)
                        {
                            <li>@x.Username on <a href="/Blog/Details/@x.BlogID">@x.Blog.Title</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <!---->
    <div class="footer">
        <div class="container">
            <p>Copyrights © 2015 Blog All rights reserved | Template by <a href="http://w3layouts.com/">W3layouts</a></p>
        </div>
    </div>
</body>
</html>



